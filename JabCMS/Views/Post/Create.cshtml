@model JabCMS.ViewModels.PostCreateViewModel

@{
    ViewBag.Title = "Create";
}





@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="width:100%">

        @Html.ValidationSummary(true)
<div class="panel panel-default">
 <div class="panel-body">
  <div class="form-group">
   <h1 class="col-md-10">Create new post</h1>
   <button class="btn btn-danger col-md-1">@Html.ActionLink("Cancel", "Index", "Post", null, new { @style = "color:white" })</button>
    <input type="submit" value="Post" class="btn btn-success col-md-1" />
   </div>
  </div>
 </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Post.Title, "Title", new { @class = "control-label col-md-1" })
            @Html.TextBoxFor(model => model.Post.Title, new { @class = "form-control col-md-7"})
            @Html.ValidationMessageFor(model => model.Post.Title, null ,  new { @class = "alert alert-danger col-md-3"})            
        </div>

       <div class="form-inline">
        <div class="form-group">
            @Html.LabelFor(model => model.Post.DateCreated, "Date", new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Post.DateCreated, new { @class = "form-control datecontrol", type = "Date" })
            @Html.ValidationMessageFor(model => model.Post.DateCreated)            
        </div>

        <div class="form-group">
         @Html.LabelFor(model => model.SelectedAuthor, "Author", new { @class = "control-label" })
         @Html.DropDownListFor(model => model.SelectedAuthor, new SelectList(Model.AuthorSelectList, "Value", "Text"), new { @class = "form-control" })        
        </div>
       </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Post.Content, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Post.Content, new { @class = "form-control", @rows = "10", @style="width:auto" })                            
        </div>


       <div class="form-group">
        @Html.LabelFor(model => model.SelectedCategories, "Categories", new { @class="control-label col-md-1"})
        <ul class="list-group col-md-3">
         @foreach (var category in Model.SelectedCategories)
         {
          <li class="list-group-item">
           <span><input type="checkbox"/></span>
           @category.Name
          </li>
         }
        </ul> 
       </div>


        <div class="form-group">
            <div class="col-md-offset-11 col-md-1">
                <button class="btn btn-danger">@Html.ActionLink("Cancel", "Index", "Post", null, new { @style = "color:white" })</button>
                <input type="submit" value="Post" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
