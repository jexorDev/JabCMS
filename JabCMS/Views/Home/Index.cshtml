@model JabCMS.ViewModels.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Most Recent</h1>
    <p class="lead">@Model.LatestPost.Title</p>
    <p>@Model.LatestPost.Content</p>
    <p><b>By:</b>@Model.LatestPost.Author.Name
       <b>On:</b>@Html.DisplayFor(m => m.LatestPost.DateCreated)
       <b>In:</b>@Model.LatestPost.Categories.FirstOrDefault()</p>
    <p>
      @Html.ActionLink("Read more", "Details", "Post", new { Model.LatestPost.Id }, null)
      @Html.ActionLink("All posts", "Index", "Post")
    </p>
</div>

